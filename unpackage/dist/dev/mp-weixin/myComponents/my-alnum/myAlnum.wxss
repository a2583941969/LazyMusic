
view.album {
		width: 300rpx;
		margin-right: 20rpx;
}
view.album image {
		width: 100%;
}
view.album>view{
	position: relative;
}
view.album>view>view.btn{
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
	background: url(data:image/png;base64,) center center no-repeat;
	background-size: cover;
}
view.album>view.album_info {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		margin-top: 24rpx;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
}
view.album>view.album_info>text.title {
		font-size: 28rpx;
		font-weight: 600;
		text-overflow:ellipsis; 
		overflow: hidden;    
		text-overflow:ellipsis;    
		whitewhite-space: nowrap;
}
view.album>view.album_info>text.author {
		font-size: 24rpx;
		color: #666;
		margin-top: 12rpx;
}

